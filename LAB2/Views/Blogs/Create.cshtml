@model Blogs
<form method = "post">
    <div class = "border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Blog</h2>
            <hr />
        </div>
        <div class = "mb - 3">
            <label asp-for="BlogID"></label>
            <br />
            <input asp-for="BlogID" class="form-control" />
            <span asp-validation-for="BlogID" class="text-danger"></span>
        </div>
        <div class = "mb - 3">
            <label asp-for="BlogTitle"></label>
            <br />
            <input asp-for="BlogTitle" class="form-control" />
            <span asp-validation-for="BlogTitle" class="text-danger"></span>
        </div>

         <div class = "mb - 3">
            <label asp-for="BlogContent"></label>
            <br />
            <textarea asp-for="BlogContent" class="form-control" style="height:150px" ><</textarea>
             <span asp-validation-for="BlogContent" class="text-danger"></span>
        </div>
          <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller = "Blogs" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>

</form>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial"></partial>
}
}