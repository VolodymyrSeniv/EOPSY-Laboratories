@model IEnumerable<Blogs>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"></partial>

<div class= "container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h2 class="text-primary ">Blogs list</h2>

        </div>
        <div class = "col-6 text-end">
             @{
                           if (User.Identity.IsAuthenticated)
                            {
             <a asp-controller="Blogs" asp-action="Create" class="btn btn-primary"> 
                 <i class="bi bi-plus-circle"></i> &nbsp; Create new blog
             </a>
              }
                            }
        </div>
    </div>

    <br />



<table class ="table table-bordered table-striped" style="width:100%">
    <thed>
    <tr>
        <th>
            Blog ID
        </th>
        <th>
            Blog Title
        </th>
       @* <th>
            Blog Contet
        </th>*@
        <th>
            Time of Creation
        </th>
        <th>
            Author
        </th>
        <th>
            Author Email
        </th>
        <th></th>
    </tr>
</thed>
<tbody>
        @foreach(var obj in Model)
        {
              <tr>
                  <td width="5%"> 
                      @obj.BlogID

                  </td>
                   <td  width="20%"> 
                      @obj.BlogTitle

                  </td>
@*
                <td width="35%"> 
                      @obj.BlogContent

                  </td>*@

                  <td width="20%"> 
                      @obj.TimeOfCreation

                  </td>

                  <td width="20%"> 
                      @obj.CreatedUserID

                  </td>

                   <td width="30%"> 
                      @obj.CreatedUserEmail

                  </td>
                  <td>
                      <div class="w-75 btn-group" role="group">
                          @{
                           if (User.Identity.IsAuthenticated)
                            {
                         
                                    if (User.Identity.Name == obj.CreatedUserID)
                                    {
                                         <a asp-controller="Blogs" asp-action="Edit" asp-route-TableID="@obj.TableID"  class = "btn btn-primary mx-2">
                                        <i class="bi bi-pen"></i> Edit</a>
        <a asp-controller="Blogs" asp-action="Delete" asp-route-TableID="@obj.TableID"  class = "btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete</a>

                                    }
                     
                           
                            }
                              <a asp-controller="Blogs" asp-action="Display" asp-route-TableID="@obj.TableID"  class = "btn btn-primary mx-2">
                           <i class="bi bi-display"></i> Display</a>
                            }
                      </div>
                  </td>
              </tr>
    
        }

</tbody>
</table>
</div>