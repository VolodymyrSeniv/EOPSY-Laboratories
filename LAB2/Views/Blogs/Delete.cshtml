@model Blogs
<form method = "post" asp-action="DeletePOST">
    <input asp-for="TableID" hidden></input>
    <div class = "border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Blog</h2>
            <hr />
        </div>
        <div class = "mb - 3">
            <label asp-for="BlogID"></label>
            <br />
            <input asp-for="BlogID" disabled class="form-control" />
        </div>
        <div class = "mb - 3">
            <label asp-for="BlogTitle"></label>
            <br />
            <input asp-for="BlogTitle" disabled class="form-control" />
        </div>

         <div class = "mb - 3">
            <label asp-for="BlogContent"></label>
            <br />
            <textarea asp-for="BlogContent" disabled class="form-control" style="height:150px" ><</textarea>
        </div>
          <br />
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller = "Blogs" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>

</form>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial"></partial>
}
}